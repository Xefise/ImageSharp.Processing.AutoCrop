<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net7.0;net6.0</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Description>Automatic cropping for images with a flat background.
Works with SixLabors.ImageSharp 2.0.0 and above.</Description>
    <SignAssembly>false</SignAssembly>
    <RepositoryUrl>https://github.com/khiemtong/ImageSharp.Processing.AutoCrop</RepositoryUrl>
    <RepositoryType>GitHub</RepositoryType>
    <PackageTags></PackageTags>
    <Pack>true</Pack>  
    <RootNamespace>ImageSharp.Processing.AutoCrop</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SixLabors.ImageSharp" Version="[2.0.0, 3.0.0)" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>
